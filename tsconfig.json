{
  "compilerOptions": {
    "target": "es5",
    "noUnusedLocals": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
